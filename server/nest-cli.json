{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "modules/v1/mail/templates/**/*"
      },
      {
        "include": "public",
        "outDir": "dist"
      }
    ],
    "watchAssets": true
  }
}